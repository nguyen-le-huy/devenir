# ==================== SERVER CONFIGURATION ====================

# Server Port
PORT=5000
NODE_ENV=development

# ==================== DATABASE ====================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/devenir?retryWrites=true&w=majority

# ==================== JWT ====================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# ==================== CLOUDINARY ====================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==================== PAYMENT GATEWAYS ====================
# PayOS (Vietnamese Bank Payment)
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKSUM_KEY=your-checksum-key

# Coinbase Commerce (Crypto Payment)
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_WEBHOOK_SECRET=your-webhook-secret

# ==================== AI / RAG ====================
OPENAI_API_KEY=sk-your-openai-api-key

# ==================== CORS ====================
CLIENT_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174

# ==================== EMAIL (Optional - for n8n) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==================== N8N AUTOMATION (Optional) ====================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/order-confirmation
